{
  "overwrite": true,
  "schema": {
    "${REACT_APP_COLLECTION_API_ENDPOINT}": {},
    "${REACT_APP_CLIENT_API_ENDPOINT}": {
      "noRequire": true
    }
  },
  "documents": [
    "src/api/queries/*.ts",
    "src/api/mutations/*.ts",
    "src/api/fragments/*.ts"
  ],
  "generates": {
    "src/api/generatedTypes.ts": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-react-apollo",
        "typescript-resolvers"
      ],
      "config": {
        "federation": true
      }
    }
  },
  "hooks": {
    "afterAllFileWrite": [
      "prettier -w src/api/generatedTypes.ts"
    ]
  }
}

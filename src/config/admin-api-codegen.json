{
  "overwrite": true,
  "schema": ["${REACT_APP_ADMIN_API_ENDPOINT}"],
  "documents": [
    "src/api/queries/*.ts",
    "src/api/mutations/*.ts",
    "src/api/fragments/*.ts"
  ],
  "generates": {
    "src/api/generatedTypes.ts": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-react-apollo"
      ],
      "config": {
        "federation": true
      }
    }
  },
  "hooks": {
    "afterAllFileWrite": ["prettier -w src/api/generatedTypes.ts"]
  }
}
